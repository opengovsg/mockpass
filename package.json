{
  "name": "@opengovsg/mockpass",
  "version": "2.8.0",
  "description": "A mock SingPass/CorpPass server for dev purposes",
  "main": "index.js",
  "bin": {
    "mockpass": "index.js"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "nodemon",
    "cz": "git-cz",
    "lint": "eslint lib",
